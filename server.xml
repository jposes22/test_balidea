<?xml version="1.0" encoding="UTF-8"?>
<server description="Default server">

    <!-- Enable features -->
    <featureManager>
        <feature>webProfile-8.0</feature>
        <feature>jndi-1.0</feature>
        <feature>jdbc-4.2</feature>
    </featureManager>

    <httpDispatcher enableWelcomePage="false" />

    <library id="OracleLib">

        <file name="/config/JDBCDrivers/ojdbc7.jar"/>

    </library>


    <dataSource jndiName="jdbc/msaude" transactional="false">
        <jdbcDriver libraryRef="OracleLib" />
        <properties.oracle driverType="thin" databaseName="XE" serverName="database" portNumber="1521" user="system" password="oracle" />
    </dataSource>



    <!-- To allow access to this server from a remote client host="*" has been added to the following element -->
    <httpEndpoint id="defaultHttpEndpoint"
                  host="*"
                  httpPort="9080"
                  httpsPort="9443" />

    <!-- Automatically expand WAR files and EAR files -->
    <applicationManager autoExpand="true"/>



</server>
